<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CalenderFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="454dp"
            app:mcv_dateTextAppearance="@style/calendar"
            app:mcv_headerTextAppearance="@style/calendar"
            app:mcv_selectionColor="#a9dbf0cb"
            app:mcv_showOtherDates="defaults"
            app:mcv_weekDayTextAppearance="@style/calendar">

        </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

        <EditText
            android:id="@+id/calRegistered"
            android:layout_width="332dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/editborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:text="일정 없음"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/calEdit"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:ems="10"
                android:hint="일정"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:text=""
                android:textColorHint="#DDDDDD" />

            <Button
                android:id="@+id/calBtn"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/plusbutton"
                android:textSize="30dp"
                android:textColor="#F97E76"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>