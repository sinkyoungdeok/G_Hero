<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mypink"
    tools:context=".ui.activity.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#dddddddd"
                    android:text="남자"
                    android:textColor="#dddddddd" />

                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#dddddddd"
                    android:text="여자"
                    android:textColor="#dddddddd" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="350sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="35sp"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:background="#ffffff"
                android:textColorHint="#dddddddd" />

            <EditText
                android:id="@+id/birthEdit"
                android:layout_width="350sp"
                android:layout_gravity="center"
                android:layout_height="35sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:hint="생일"
                android:textColorHint="#dddddddd"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginTop="5sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/firstDayEdit"
                android:layout_width="350sp"
                android:layout_gravity="center"
                android:layout_height="35sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:hint="처음 만난 날"
                android:textColorHint="#dddddddd"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginTop="5sp"
                android:gravity="center" />

            <Button
                android:id="@+id/btn"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:textSize="25sp"
                android:background="@drawable/mybutton_bold"
                android:gravity="center"
                android:text="시작하기!"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>