<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mypink"
    tools:context="com.aspsine.fragmentnavigator.demo.ui.activity.LoginActivity">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="로그인 정보를 잊으셨나요?"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/nanumgodhic"
        />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView2"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/signup_button"
        style="?android:textAppearanceSmall"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:background="@drawable/mybutton_bold"
        android:text="@string/action_signup_in"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_kakao_login"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/nanumgodhic"
        />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="또는"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/signup_button"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/nanumgodhic"
        />
    <Button
        android:id="@+id/login_in_button"
        style="?android:textAppearanceSmall"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:background="@drawable/mybutton_bold"
        android:text="@string/action_log_in"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/or"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/nanumgodhic"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:background="@drawable/border"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#EFEFEF"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/login_in_button"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nanumgodhic"
        />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:background="@drawable/border"
        android:hint="@string/prompt_email"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#EFEFEF"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_password"
        android:layout_marginBottom="4dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nanumgodhic"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/icon"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_email"
        android:layout_marginBottom="70dp"
        />

</RelativeLayout>
