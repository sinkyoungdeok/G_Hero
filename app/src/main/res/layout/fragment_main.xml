<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/goorm"
    tools:context=".ui.fragment.MainFragment">

    <LinearLayout
        android:layout_width="400sp"
        android:layout_height="161sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="@drawable/view_round"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:id="@+id/myImg"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:scaleType="centerCrop"
                android:background="@mipmap/icon_pink" />

            <TextView
                android:id="@+id/myName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="차두리" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="30sp"
                android:text="2020년 9월 9일 수요일" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="126sp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:src="@mipmap/heart" />

            <TextView
                android:id="@+id/ingday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="100일째" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:id="@+id/yourImg"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:scaleType="centerCrop"
                android:background="@mipmap/icon_pink" />

            <TextView
                android:id="@+id/yourName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="차두리" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
